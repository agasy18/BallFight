<?xml version="1.0"?>
<configuration>
  <system.serviceModel>
    <services>
      <service name="BallNetModel.BallService">
        <!-- You can use your own local ip address instead of localhost, by this way, 
                     the app is going to work in a Local Area Network-->
        <endpoint address="http://localhost:12345/ballServer" binding="wsHttpBinding" contract="BallNetModel.IBallService"/>
      </service>
    </services>
  </system.serviceModel>
<startup>
  <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/>
</startup>
</configuration>
